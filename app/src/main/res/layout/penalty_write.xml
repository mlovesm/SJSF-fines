<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <include
        android:id="@id/layout_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/inc_top"
        android:layout_alignParentTop="true"
        />
    <!--패널티카드-->
    <LinearLayout
        android:id="@id/linearLayout1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layout_top"
        android:background="@color/white"
        >

        <!-- title -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:background="@color/title_bg"
            >
            <ImageView
                android:id="@id/imageView1"
                android:layout_width="28.0dip"
                android:layout_height="28.0dip"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_info_black_24dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:layout_toRightOf="@id/imageView1"
                android:layout_centerVertical="true"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="위반자"
                />
        </RelativeLayout>
        <!-- 라인 -->
        <LinearLayout
            android:background="@color/gary_line"
            android:layout_width="match_parent"
            android:layout_height="1.0dip"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/border_bottom_l"
            android:layout_marginTop="4dp"
            >
            <TextView
                android:id="@id/text1"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="36dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="받는사람"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/font_333"
                />

            <TextView
                android:id="@id/textView1"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="36dp"
                android:gravity="center_vertical"
                android:text=""
                android:textAlignment="center"
                android:textSize="15sp"
                android:textColor="@color/black"
                />
            <Button
                android:id="@id/button1"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/box_green"
                android:text="조회"
                android:textColor="@color/font_333"
                android:textSize="15sp"
                android:textStyle="bold"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10"
            android:orientation="horizontal"
            android:background="@drawable/border_bottom_l"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="36dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="소속"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/font_333"
                />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="0dp"
                android:layout_weight="7"
                android:layout_height="36dp"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:text=""
                android:textAlignment="center"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/border_bottom_l"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="36dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#ff333333"
                android:text="위반일"
                />
            <TextView
                android:id="@id/textView3"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="36dp"
                android:gravity="center_vertical"
                android:text=""
                android:textSize="15sp"
                android:textAlignment="center"
                android:textColor="@color/black"
                />
            <Button
                android:id="@id/date_button"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/box_green"
                android:text="날짜선택"
                android:textColor="@color/font_333"
                android:textSize="15sp"
                android:textStyle="bold"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/border_bottom_l"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="36dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#ff333333"
                android:text="위반시간"
                />

            <TextView
                android:id="@id/textView4"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="36dp"
                android:gravity="center_vertical"
                android:text=""
                android:textSize="15sp"
                android:textColor="@color/black"
                android:textAlignment="center"
                />

            <Button
                android:id="@+id/time_button"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/box_green"
                android:text="시간선택"
                android:textColor="@color/font_333"
                android:textSize="15sp"
                android:textStyle="bold"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="1dp" >

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="120dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="위반장소"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/font_333" />

            <EditText
                android:id="@+id/editText1"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="120dp"
                android:layout_gravity="center_vertical"
                android:gravity="top"
                android:padding="5.0dip"
                android:hint="내용"
                android:textColorHint="@color/font_333"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:background="@color/gary_light"
                />
        </LinearLayout>



        <!-- 타이틀2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/border_top_bottom_title"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:id="@id/text1"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="45dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/font_333"
                android:text="위반유형"
                />

            <TextView
                android:id="@+id/textView4"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="45dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/font_333"
                android:text="패널티부과점수"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/border_bottom_l"
            >

            <Spinner
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:id="@+id/spinner1" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:background="@color/gary_light"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:text="0점"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/font_333"
                android:id="@+id/textView5" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10"
            android:orientation="horizontal"
            android:background="@drawable/border_bottom_l"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="36dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="작성자"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/font_333"
                android:id="@+id/textView" />
            <TextView
                android:id="@+id/textView6"
                android:layout_width="0dp"
                android:layout_weight="7"
                android:layout_height="36dp"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:textAlignment="center"
                />
        </LinearLayout>
    </LinearLayout>

    <!-- 버튼 -->
    <LinearLayout android:orientation="horizontal" android:id="@+id/layout_bottom" android:layout_width="match_parent" android:layout_height="wrap_content" android:baselineAligned="false" android:layout_alignParentBottom="true">
        <LinearLayout android:background="@color/blue" android:layout_width="0.0dip" android:layout_height="50.0dip" android:layout_weight="1.0"
            android:id="@+id/linear1">
            <TextView android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/font_navtitle"
                android:gravity="center"
                android:id="@+id/textButton1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="저장" />
        </LinearLayout>
        <LinearLayout android:background="@color/gary" android:layout_width="0.0dip" android:layout_height="50.0dip" android:layout_weight="1.0"
            android:id="@+id/linear2">
            <TextView android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/font_navtitle"
                android:gravity="center"
                android:id="@+id/textButton2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="삭제" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>